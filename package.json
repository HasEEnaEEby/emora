{
  "name": "emora-backend",
  "version": "1.0.0",
  "description": "EMORA - Real-time Emotion Mapping Backend",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:port": "PORT=5001 nodemon src/server.js",
    "dev:debug": "NODE_ENV=development DEBUG=* nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/**/*.js",
    "build": "echo 'No build step required for Node.js'",
    "setup": "npm install && mkdir -p logs",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "kill-port": "lsof -ti:5000 | xargs kill -9 || echo 'Port 5000 not in use'",
    "clean-start": "npm run kill-port && npm run dev",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "check-ports": "lsof -i :5000 && lsof -i :5001 && lsof -i :5002 || echo 'Ports checked'",
    "db:seed": "node scripts/seed.js",
    "docker:build": "docker build -t emora-backend .",
    "docker:run": "docker run -p 5000:5000 emora-backend",
    "production": "NODE_ENV=production node src/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop emora-backend",
    "pm2:restart": "pm2 restart emora-backend"
  },
  "keywords": [
    "emotion",
    "mapping",
    "heatmap",
    "mood",
    "realtime",
    "express",
    "mongodb",
    "websocket",
    "analytics"
  ],
  "author": "EMORA Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.7",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongoose": "^8.16.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HasEEnaEEby/Emora-Engine-Backend.git"
  },
  "bugs": {
    "url": "https://github.com/HasEEnaEEby/Emora-Engine-Backend/issues"
  },
  "homepage": "https://github.com/HasEEnaEEby/Emora-Engine-Backend#readme"
}
