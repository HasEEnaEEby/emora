# EMORA Backend Environment Variables

# Node Environment
NODE_ENV=development

# Server Port
PORT=8000

# Database
MONGODB_URI=mongodb://localhost:27017/emora

# JWT Configuration - CRITICAL: Must be the same everywhere
JWT_SECRET=emora-super-secret-jwt-key-for-development-change-in-production
JWT_EXPIRE=7d

# Client URLs
CLIENT_URL=http://localhost:3000

# Redis (if using)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# External APIs (optional)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
YOUTUBE_API_KEY=
WEATHER_API_KEY=
FCM_SERVER_KEY=

# Development Flags
DEBUG_JWT=true
DEBUG_AUTH=true
